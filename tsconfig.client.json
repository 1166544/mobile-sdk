{
  "compilerOptions": {
    "outDir": "./app/publicSources/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "app",
    "config",
    "test",
    "typings",
    "dist",
    "app.ts",
    "app/publicSources",
    "app/view"
  ],
  "typeRoots": ["node_modules/@types"]
}